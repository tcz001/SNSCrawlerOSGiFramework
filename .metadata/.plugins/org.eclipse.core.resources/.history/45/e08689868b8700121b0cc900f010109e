package crawler.api.service.impl;

import org.scribe.model.OAuthConstants;
import org.scribe.model.OAuthRequest;
import org.scribe.model.Response;
import org.scribe.model.Verb;
import net.sf.json.*;

import crawler.api.service.fetch.FetchService;

public class WeiboFriendsIDsFetchServiceImpl implements FetchService {
	private static final String PROTECTED_RESOURCE_URL = "https://open.t.qq.com/api/friends/fanslist";
	private static final String apiKey = "801320236";
	private static final String apiSecret = "8e552278a16399189233b111ea11ecf7";
	JSONObject json;
	OAuthimpl oAuthimpl;

	@Override
	public void init() {
		oAuthimpl = new OAuthimpl();
		oAuthimpl.getToken();
	}

	@Override
	public void fetch() {
		String url = PROTECTED_RESOURCE_URL + "?format=json&access_token=" + oAuthimpl.accessToken + "&oauth_consumer_key=" + apiKey +"&openid="+"&oauth_version=2.a"; 
		"url": "https:\/\/open.t.qq.com\/api\/friends\/idollist_name?format=json&amp;access_token=9bfa8176a2b162ad80866a1cedc99c6d&amp;oauth_consumer_key=801058005&amp;openid=AF78060969FB39FB8A7010A3F38DBFB1&amp;oauth_version=2.a&amp;clientip=61.150.43.96&amp;scope=all&amp;appfrom=php-sdk2.0beta&amp;seqid=1362703507&amp;serverip=183.60.10.172",
		
		// Now let's go and ask for a protected resource!
		System.out.println("Now we're going to access a protected resource...");
		OAuthRequest request = new OAuthRequest(Verb.GET,
				url);
		request.addQuerystringParameter("oauth_consumer_key", "801320236");
		request.addQuerystringParameter("appsecret", "8e552278a16399189233b111ea11ecf7");
		request.addQuerystringParameter("openid", "B94FB0DE54C3269F73C737311E12B5D5");
		request.addQuerystringParameter("openkey", "65CCD52B576A1CD328D08183C7FAB7C9");
		oAuthimpl.service.signRequest(oAuthimpl.accessToken, request);
		Response response = request.send();
		System.out.println("Got it! Lets see what we found...");
		System.out.println();
		System.out.println(response.getCode());
		System.out.println(response.getBody());
		json= JSONObject.fromObject(response.getBody());
		System.out.println(json.toString());
		System.out
				.println("Thats it man! Go and build something awesome with Scribe! :)");

	}

	@Override
	public void log() {
	}

}
