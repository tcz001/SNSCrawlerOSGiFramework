package fetch.api.service.impl;
import java.io.IOException;

import weibo4j.Timeline;
import weibo4j.examples.oauth2.Log;
import weibo4j.model.Status;
import weibo4j.model.StatusWapper;
import weibo4j.model.WeiboException;

public class GetFriendsTimelineImpl {
	OAuthimpl oAuthimpl;
	public GetFriendsTimelineImpl() {
		String access_token = null;
		try {
			access_token = OAuthimpl.getAccessToken().getAccessToken();
		} catch (WeiboException | IOException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		Timeline tm = new Timeline();
		tm.client.setToken(access_token);
		try {
			StatusWapper status = tm.getFriendsTimeline();
			for(Status s : status.getStatuses()){
				Log.logInfo(s.toString());
			}
			System.out.println(status.getNextCursor());
			System.out.println(status.getPreviousCursor());
			System.out.println(status.getTotalNumber());
			System.out.println(status.getHasvisible());
		} catch (WeiboException e) {
			e.printStackTrace();
		}
	}
	public static void main(String[] args) {
		new GetFriendsTimelineImpl();
	}
	
}
